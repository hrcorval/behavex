<!DOCTYPE html>

{#/*#}
{#* BehaveX - BDD testing library based on Behave#}
{#*/#}
{##}

{%- set relative = '' -%}
{%- set path_report = '../report.html' -%}
{%- if menu == 'report' -%}
    {%- set path_report = '#' -%}
    {%- set relative = 'reports/'-%}
{%- endif -%}
 <html lang="en" manifest="{{relative}}bootstrap/manifest/{{ menu }}.manifest">
    <head>
        <title>{% block title %} Test Execution Report {% endblock%}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <!-- Latest compiled and minified CSS -->
        <link href="{{relative}}bootstrap/css/pace-theme-center-circle.css"
              rel="stylesheet">
        <link rel="stylesheet" href="{{relative}}bootstrap/css/layout.min.css"
              rel="stylesheet">
        <link rel="stylesheet"
              href="{{relative}}bootstrap/css/bootstrap-theme.min.css">
        <link href="{{relative}}bootstrap/css/bootstrap.min.css"
              rel="stylesheet">
        <link href="{{relative}}bootstrap/css/pace-theme-center-circle.css"
              rel="stylesheet">
        <link href="{{relative}}bootstrap/css/layout.min.css"
              rel="stylesheet">
        <link href="{{relative}}bootstrap/css/jquery-ui.min.css"
              rel="stylesheet">
        {% block link_css %}{% endblock %}
        <!-- Latest compiled and minified JavaScript -->
        <script src="{{relative}}bootstrap/js/jquery-1.11.0.min.js"
                type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/bootstrap.min.js"
            type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/chart.js"
            type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/jquery.tablesorter.min.js"
            type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/jquery.tooltipster.min.js"
            type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/jquery-ui.min.js"
            type="application/javascript"></script>
        <script src="{{relative}}bootstrap/js/pace.min.js"
            type="application/javascript"></script>
        {% block script %}{% endblock %}
    </head>
    <body>
    {%- block iframe -%}{%- endblock -%}
    <nav class="navbar navbar-default nav-behavex" style="display: none">
        <div class="container pull-left" style="width: 100%">
            <div class="navbar-header">
                    <img src="{{relative}}bootstrap/behavex_icon.png"
                     class="pull-left behavex-icon">
                <ul class="nav nav-pills pull-left">
                    <!-- icon behavex-->
                    <li {% if menu == 'report' %} class="active" {% endif %}>
                        <a href="{{ path_report}}">Test Report</a>
                    </li>
                    <li {% if menu == 'tags' %} class="active active-behavex"{% endif %}>
                        <a href="{{ relative }}tags.html">Tags</a>
                    </li>
                    <li {% if menu == 'steps' %} class="active" {% endif %}>
                        <a  href="{{ relative }}steps.html">Steps</a>
                    </li>
                    <li{% if menu == 'metrics' %} class="active" {% endif %}>
                        <a href="{{ relative }}metrics.html">Metrics</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container_body navbar navbar-default" style="display: None">
        <!--<div class="contained-title pull-left">-->
        <div class="row title-behavex">
            <div class="col-md-3">
                <span class="contained-title pull-left"><b>
                    {{ (menu ~ '.title')|get_text}}</b>
                </span>
            </div>
        {% if ((menu ~ '.modal.title')|get_text) %}
            <div class="row">
                <div class="col-sm-12">
                <p class="p-help-block">
                    <span class="help-block" >
                        &nbsp;{{ (menu ~ '.description')|get_text }}
                        <span class="glyphicon glyphicon-question-sign pull-right"
                          id="help-{{ menu }}"
                          title="{{ 'commons.help.title'|get_text }}">
                        </span>
                    </span>
                </p>
                </div>
            </div>
        {% endif %}
        </div>
        {%- block block_filter -%} {%- endblock -%}
         <!--</div>-->
        {% block body %}{% endblock %}
        <div id="fill-for-fix"></div>
    </div>
    {# start modal #}
    <div class="modal fade" id="{{ menu }}_modal" style="display: None">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h3>{{ (menu ~ '.modal.title')|get_text }}</h3>
                </div>
                <div class="modal-body modal-style-body">
                    {{ (menu ~ '.modal.body')|get_text }}
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar navbar-bottom"  style="display: none">
        <div class="container">
            <div class="row">
                <!--
                <div class="col-sm-4">
                    <h5 id='footer-header'> SITEMAP </h3>
                    <div class="col-sm-4" style="padding: 0 0 0 0px">
                        <p>News</p>
                        <p>contact</p>
                    </div>
                    <div class="col-sm-4" style="padding: 0 0 0 0px">
                        <p>FAQ</p>
                        <p>Privacy Policy</p>
                    </div>
                </div> -->
                <div class="col-sm-12 text-center">
                    <h6 id='footer-header'>
                        {{ 'commons.framework_name'|get_text }} -
                        {{ 'commons.framework_description'|get_text }}</h6>
                </div>
            </div>
        </div>
    </nav>

<script type="text/javascript">{% block javascript %} {% endblock %}
</script>
    <script type="text/javascript">
        $(window).load(function() {
            {% block pre_load %}{% endblock %}
            $('.container_body').css('display','');
            $('.nav-behavex').css('display','');
            $('.navbar-bottom').css('display','');
            $('#help-{{ menu }}').click(function($this){
                if ($('#{{ menu }}_modal').hasClass('in')){
                    $('#{{ menu }}_modal').modal('hide');
                } else {
                    $('#{{ menu }}_modal').modal('show');
                }
            });
            $('.tr-progress').hover(
                function(){
                    tr = $(this);
                    tr.find('.progress').css('border', '2px solid #f1c132');
                },
                function(){
                    tr = $(this);
                    tr.find('.progress').css('border', '1px solid #ccc');
                }
            );
        });

    </script>
    </body>
</html>
